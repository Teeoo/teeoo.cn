body 
	font-family Helvetica, Arial, Source Sans Pro,Helvetica Neue,sans-serif,"PingFang SC", "Microsoft YaHei", "WenQuanYi Micro Hei", "tohoma,sans-serif"
	color #34495e
	-webkit-font-smoothing antialiased

// 文章列表hover阴影
.article 
	&:hover 
		box-shadow 0 0 20px 2px rgba(129, 167, 215, 0.1)

// 文章详情
.markdown 
	h1 
		font-size 2.2em
		font-weight 700
		line-height 1.1
		padding-top 16px
		margin-bottom 4px
	h2 
		font-size 1.4em
		margin 40px 10px 20px 0
		padding-left 9px
		border-left 6px solid #ff7e79
		font-weight 700
		line-height 1.4
	h3 
		font-weight 700
		font-size 1.2em
		line-height 1.4
		margin 10px 0 5px
		padding-top 10px
	h4 
		font-weight 700
		text-transform uppercase
		font-size 1.1em
		line-height 1.4
		margin 10px 0 5px
		padding-top 10px
	h5 
		font-weight bold
		text-transform uppercase
	h6 
		font-weight normal
		color #AAA
	img 
		max-width 100%
		border-radius 5px
		// display block
		// margin-bottom 15px
		height auto
	p 
		margin 0 0 20px
		padding 0
		line-height 1.8
		& > code 
			color #c7264e
			background-color #f9f2f4
			font-size .95em
			border-radius 3px
			-moz-border-radius 3px
			-webkit-border-radius 3px
	blockquote 
		font-size 1em
		font-style normal
		padding 30px 38px
		margin 0 0 15px
		position relative
		line-height 1.8
		text-indent 0
		border none
		color #888
		&:before 
			content "“"
			left 12px
			top 0
			color #E0E0E0
			font-size 4em
			font-family Arial, serif
			line-height 1em
			font-weight 700
			position absolute
		&:after 
			content "”"
			right 12px
			bottom -26px
			color #E0E0E0
			font-size 4em
			font-family Arial, serif
			line-height 1em
			font-weight 700
			position absolute
			bottom -31px
	del 
		text-decoration line-through
	pre 
		margin 0 0 10px
		font-size 13px
		line-height 1.42857
		word-break break-all
		word-wrap break-word
		border-radius 4px
		white-space pre-wrap
		display block
		background #f8f8f8
		padding 10px 20px
		border none
		margin-bottom 25px
		color #666
		font-family Courier, sans-serif
	code 
		color #c7254e
		background-color #f9f2f4
		border-radius 4px
		font-family Menlo, Monaco, Consolas, "Courier New", monospace
		padding 2px 4px
		font-size 90%
	figure 
		margin 1em 0
		img 
			margin-bottom 0px
	figcaption 
		font-size 0.75em
		padding 0.5em 2em
		margin-bottom 2em
	hr 
		margin-top 20px
		margin-bottom 20px
		border 0
		border-top 1px solid #eee
	li 
		margin-bottom 0.75em
		margin-top 0.75em
	ol#footnotes 
		font-size 0.95em
		padding-top 1em
		margin-top 1em
		margin-left 0
		border-top 1px solid #eaeaea
		counter-reset footer-counter
		list-style none
		color #555
		padding-left 5%
		margin 20px 0
		li 
			margin-bottom 10px
			margin-left 16px
			font-weight 400
			line-height 2
			list-style-type none
			&:before 
				content counter(footer-counter) ". "
				counter-increment footer-counter
				font-weight 800
				font-size .95em
.markdown h2, h3, h4, h5, h6 
	line-height 1.5em
	margin-top 2.2em
	margin-bottom 4px
.markdown h5, h6 
	font-size .9em
.markdown dl, ol, ul 
	margin-top 12px
	margin-bottom 20px
	padding-left 5%
	line-height 1.8
.markdown strong, dfn 
	font-weight 700
.markdown em, dfn 
	font-style italic
	font-weight 400
.markdown ol p, ul p 
	margin-bottom 0px

// 重写框架部分样式
.v-card__title
	color #666
.v-card__text 
	p 
		color #444
		font-size .875rem
		word-wrap break-word
		word-break break-all
		line-height 1.9em
		margin-top 5px
		overflow hidden
		text-align justify
