    "cross-env": "^7.0.0",
    "dayjs": "^1.8.19",
    "fastify": "^2.11.0",
    "graphql-tag": "^2.10.1",
    "material-design-icons-iconfont": "^5.0.1",
    "nuxt": "^2.11.0",
    "prismjs": "^1.19.0",
    "screenfull": "^5.0.1",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-scroll-reveal": "^1.0.11"
